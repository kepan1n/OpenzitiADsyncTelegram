TELEGRAM_BOT_TOKEN=
# Optional: comma-separated chat IDs allowed to request JWTs
# TELEGRAM_ALLOWED_CHAT_IDS=123456789,987654321
# Optional: admin IDs (not auto-banned on invalid requests)
# TELEGRAM_ADMIN_CHAT_IDS=123456789

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
# Use "true" or "false"
SMTP_TLS=true
SMTP_SSL=false
SMTP_TIMEOUT=30

# Email domain for usernames
USER_EMAIL_DOMAIN=example.com

# Optional: folder with client installers/files to attach
CLIENT_DIR=/opt/openziti-ad-telegram/clients

# Bot state (ban list, counters, rate-limits)
# Recommended to keep under /opt/openziti-ad-telegram/data (ignored by git)
BOT_STATE_FILE=/opt/openziti-ad-telegram/data/bot-state.json

# AD nested group membership support (Active Directory only)
LDAP_NESTED_GROUPS=true

# Simple per-username rate limit
BOT_RATE_LIMIT_WINDOW_SECONDS=300
BOT_RATE_LIMIT_MAX=3

# Global rate limit across ALL chat IDs (total requests/hour)
BOT_GLOBAL_RATE_LIMIT_WINDOW_SECONDS=3600
BOT_GLOBAL_RATE_LIMIT_MAX=3

